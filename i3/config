set $mod Mod4
#for_window [class="^.*"] border pixel 1
gaps inner 10 
gaps outer 10 

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FontAwesome 11
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec termite --class=Shell

# Kill focused window
bindsym $mod+c kill

workspace_auto_back_and_forth yes
bindsym $mod+Escape workspace back_and_forth

# Start rofi (a program launcher)
bindsym $mod+d exec rofi -show run -lines 9
bindsym $mod+w exec rofi -show window
bindsym $mod+Shift+F10 exec firefox -P Other

# Keybindings
bindsym F1	exec ~/.config/hotkeyPopup/script ~/.config/hotkeyPopup/i3.kb
bindsym F2      exec ~/.config/hotkeyPopup/script ~/.config/hotkeyPopup/vim.kb
# Take screenshot 
bindsym Print exec scrot -e 'mv $f ~/Work/Screenshots/' 

#Disable focus on mouse
focus_follows_mouse yes

# change focus
bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up	focus up
bindsym $mod+Down focus down

bindsym $mod+Ctrl+Left move container to output left
bindsym $mod+Ctrl+Right move container to output Right
bindsym $mod+Shift+Left workspace prev
bindsym $mod+Shift+Right workspace next


# alternatively, you can use the cursor keys:
# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+M move right
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Tab floating toggle 
bindsym $mod+Shift+s sticky toggle
bindsym $mod+n move scratchpad 
bindsym $mod+Shift+n scratchpad show

bindsym $mod+space swap container with mark "SWAP"
bindsym $mod+Shift+space exec termite

# focus the parent container
bindsym $mod+q focus parent

# focus the child container
bindsym $mod+a focus child


# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
# exit i3 (logs you out of your X session)
 
mode "Exit: [L]ogout, [R]eboot, [S]hutdown" {
  bindsym l exec i3-msg exit
  bindsym r exec systemctl reboot
  bindsym s exec systemctl poweroff
  bindsym Escape mode "default"
  bindsym Return mode "default"
}

bindsym $mod+x mode "Exit: [L]ogout, [R]eboot, [S]hutdown"

